@model CRVS.Core.Models.ViewModels.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<body class="page">
    <main class="main page__main mt-5">
        <div class="container">
            <form asp-action="Register" class="login-form" enctype="multipart/form-data">
                <h3 class="login-form__title">Sign Up</h3>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group d-flex flex-column align-items-center">
                            <div class="position-relative w-75 mb-md-2">
                                <img id="default" src="~/Images/GoldenBidPerson1_TestPicture.png" class="rounded-circle w-100" />
                                <img id="preview" src="#" alt="Preview" class="top-0 w-100 rounded-circle left-0" style="display: none;" />
                            </div>
                            <label class="p-0 bg-transparent">Profile Picture (Optional)</label>
                            <input asp-for="Img" class="form-control" onchange="previewImage(event)" />
                            <span asp-validation-for="Img" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <input asp-for="FName" class="form-control" placeholder="First Name" />
                            <span asp-validation-for="FName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="LName" class="form-control" placeholder="Last Name" />
                            <span asp-validation-for="LName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Email" class="form-control" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Password" class="form-control" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input asp-for="Phone" class="form-control" placeholder="Phone" value="+962" />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        <button class="primary-btn w-100" type="submit">Create</button>
                    </div>
                    <div class="login-form__footer">
                        <a class="login-form__link" asp-action="Login">I Have Account!</a>
                    </div>
                </div>
            </form>
        </div>
    </main>
</body>

@section Scripts {
    <script>
        function previewImage(event) {
            var input = event.target;
            var reader = new FileReader();
            reader.onload = function () {
                var defaultImgElement = document.getElementById("default");
                var previewImgElement = document.getElementById("preview");
                defaultImgElement.style.display = "none";
                previewImgElement.src = reader.result;
                previewImgElement.style.display = "block";
            };
            reader.readAsDataURL(input.files[0]);
        }
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
