@model CRVS.Core.Models.ViewModels.CreateRoleViewModel
@{
    ViewData["Title"] = "CreateRole";
}

<h1 class="text-center my-5">@Localizer["CreateRole"]</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateRole">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">@Localizer["RoleName"]</label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@Localizer["Create"]" class="btn btn-primary" />
                <a class="btn btn-warning" asp-action="RolesList">@Localizer["Cancel"]</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
