        }

        .notify .point {
            width: 16px;
            height: 16px;
            font-size: 11px;
            padding: 0 0 1px 1px;
        }

        .select2-container {
            height: calc(1.5em + 0.75rem + 2px);
            padding: 0.375rem 0.75rem;
            font-size: .9375rem;
            font-weight: 300;
            line-height: 1.5;
            color: #67757c;
            background-clip: padding-box;
            border: 1px solid #e9ecef;
            appearance: none;
            border-radius: 4px;
            transition: border-color .15s ease-in-out,box-shadow .15s ease-in-out;
        }

            .select2-container .select2-selection--single .select2-selection__rendered {
                margin-top: -3px;
            }

        .select2 {
            width: 100% !important;
            background-color: #fff;
            height: 58px;
                padding: 24px 5px 0 0;
        }
        span.select2-dropdown{
            top: 0;
        }

        .select2-container--default .select2-selection--single .select2-selection__arrow {
            top: 5px;
        }

        span.select2-selection__arrow{
                margin: 20px 0 0 8px;
        }

        .select2-container--default .select2-selection--single {
            border: 1px solid #aaa;
            border-radius: 4px;
            border: none !important;
        }

        .select2-parent :nth-child(4) {
            display: none !important;
        }

        .actions {
            margin-top: 2%;
        }

        .hide {
            display: none !important;
        }

        /*temporary style here*/
        .form-select {
            background-image: url(/admin-pro/assets/images/custom-select.png);
            background-size: auto;
        }

        .middle-line:before {
            content: "";
            height: 98%;
            width: 1px;
            position: absolute;
            top: 1%;
            right: 50%;
            background-color: #d9dcde;
        }

        #maxDate, #minDate {
            border: 1px solid #e9ecef;
        }

        .first-level,
        .first-level li {
            position: relative;
        }
        .first-level:before {
            content: "";
            width: 2px;
            height: calc(100% - 16px);
            position: absolute;
            top: 0;
            right: 13%;
            background-color: #a4a6a8;
            border-radius: 1px;
        }
        .first-level li:before {
            content: "";
            width: 5%;
            height: 2px;
            position: absolute;
            top: 50%;
            right: 0;
            background-color: #a4a6a8;
            border-radius: 1px;
        }
        .first-level li:hover::before,
        .first-level li:hover::after {
            background-color: #fff;
        }
        .first-level li:after {
            content: "";
            width: 7px;
            height: 7px;
            position: absolute;
            top: 45%;
            right: -4px;
            background-color: #a4a6a8;
            border-radius: 50%;
        }

        #percentage-title-table tr td:first-child {
            position: relative;
        }
        #percentage-title-table tr td:first-child:before {
            content: "";
            width: 10px;
            height: 10px;
            position: absolute;
            top: 20px;
            right: -4px;
            border-radius: 50%;
            background-color: #000;
        } 
        #percentage-title-table tr:first-child td:first-child:before {
            background-color: #00ff00;
        } 
        #percentage-title-table tr:nth-child(2) td:first-child:before {
            background-color: #26c6da;
        } 
        #percentage-title-table tr:nth-child(3) td:first-child:before {
            background-color: #ffec49;
        } 
        #percentage-title-table tr:nth-child(4) td:first-child:before {
            background-color: #ff3c2e;
        } 

        .box {
            background-color: #f2f4f7;
            padding: 30px;
            border-radius: 20px;
            margin-bottom: 25px;
        }
