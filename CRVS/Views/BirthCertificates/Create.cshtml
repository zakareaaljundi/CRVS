                                        <input asp-for="BornDisable" class="form-control " placeholder="@Localizer["BornDisable"]" min="0" />
                                        <label>@Localizer["BornDisable"]</label>
                                        <span asp-validation-for="BornDisable" class="text-danger"></span>
