@model CRVS.Core.Models.ViewModels.BirthCertificateViewModel
@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="border-bottom title-part-padding">
                <h4 class="card-title mb-0 text-center">Create</h4>
            </div>
            <div class="card-body wizard-content">
                <form asp-action="Create" class="login-form validation-wizard wizard-circle mt-5" enctype="multipart/form-data" method="post">
                    <!-- Step 1 -->
                    <h6>معلومات الوليد</h6>
                    <section>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="Governorate" class="form-control required" value="@ViewBag.Governorate" readonly />
                                    <span asp-validation-for="Governorate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="Doh" class="form-control required" value="@ViewBag.Doh" readonly />
                                    <span asp-validation-for="Doh" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="District" class="form-control required" value="@ViewBag.District" readonly />
                                    <span asp-validation-for="District" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="Nahia" class="form-control required" value="@ViewBag.Nahia" readonly />
                                    <span asp-validation-for="Nahia" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="Village" class="form-control required" value="@ViewBag.Village" readonly />
                                    <span asp-validation-for="Village" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="FacilityType" class="form-control required" value="@ViewBag.FacilityType" readonly />
                                    <span asp-validation-for="FacilityType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="HealthInstitution" class="form-control required" value="@ViewBag.HealthInstitution" readonly />
                                    <span asp-validation-for="HealthInstitution" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="HealthId" class="form-control" readonly />
                                    <span asp-validation-for="HealthId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="ChildName" class="form-control required" placeholder="إسم المولود" />
                                    <span asp-validation-for="ChildName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <select asp-for="Gender" class="form-control required" asp-items="Html.GetEnumSelectList<CRVS.Core.Models.BirthCertificate.Genders>()">
                                        <option vlaue="-1" disabled selected hidden>--- حدد الجنس ---</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <select asp-for="BirthType" class="form-control required" asp-items="Html.GetEnumSelectList<CRVS.Core.Models.BirthCertificate.BirthTypes>()">
                                        <option vlaue="-1" disabled selected hidden>--- حدد نوع الولادة ---</option>
                                    </select>
                                    <span asp-validation-for="Gender" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <select asp-for="NumberOfBirth" class="form-control required" asp-items="Html.GetEnumSelectList<CRVS.Core.Models.BirthCertificate.NumberOfBirths>()">
                                        <option vlaue="-1" disabled selected hidden>--- حدد عدد المواليد ---</option>
                                    </select>
                                    <span asp-validation-for="NumberOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>حدد ساعة الولادة</label>
                                    <input asp-for="BirthHour" class="form-control required" type="time" placeholder="ساعة الولادة" id="BH" />
                                    <span asp-validation-for="BirthHour" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label>حدد تاريخ الولادة</label>
                                    <input asp-for="DOB" class="form-control required" type="date" id="DOH" />
                                    <span asp-validation-for="DOB" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="DOBText" name="DOBText" class="form-control" placeholder="DOBText" id="dobTextInput" />
                                    <span asp-validation-for="DOBText" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Step 2 -->
                    <h6>معلومات الوالدين</h6>
                    <section>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="FatherFName" class="form-control required" placeholder="إسم الأب الأول" />
                                    <span asp-validation-for="FatherFName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="FatherMName" class="form-control required" placeholder="أسم الأب الأوسط" />
                                    <span asp-validation-for="FatherMName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="FatherLName" class="form-control required" placeholder="أسم الأب الأخير" />
                                    <span asp-validation-for="FatherLName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="FatherDOB" class="form-control required" type="month" placeholder="FatherDOB" onchange="calculateAge('FatherDOB', 'FatherAgeInput')" />
                                    <span asp-validation-for="FatherDOB" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="FatherAge" id="FatherAgeInput" class="form-control required" placeholder="عمر الأب" readonly />
                                    <span asp-validation-for="FatherAge" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select asp-for="FatherJobId" class="form-control required">
                                        <option value="" disabled selected hidden>-- حدد وظيفة الأب *--</option>
                                        @foreach (var item in ViewBag.Jobs)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select asp-for="FatherReligionId" class="form-control required">
                                        <option value="" disabled selected hidden>-- حدد ديانة الأب *--</option>
                                        @foreach (var item in ViewBag.Religions)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select asp-for="FatherNationalityId" class="form-control required">
                                        <option value="" disabled selected hidden>-- حدد جنسية الأب *--</option>
                                        @foreach (var item in ViewBag.Nationalities)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="FatherMobile" class="form-control required" placeholder="رقم هاتف الأب" />
                                    <span asp-validation-for="FatherMobile" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Step 3 -->
                    <h6>Step 3</h6>
                    <section>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="MotherFName" class="form-control required" placeholder="أسم الأم الأول" />
                                    <span asp-validation-for="MotherFName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="MotherMName" class="form-control required" placeholder="أسم الأم الأوسط" />
                                    <span asp-validation-for="MotherMName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="MotherLName" class="form-control required" placeholder="أسم الأم الأخير" />
                                    <span asp-validation-for="MotherLName" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="MotherDOB" class="form-control required" type="month" placeholder="MotherDOB" onchange="calculateAge('MotherDOB', 'MotherAgeInput')" />
                                    <span asp-validation-for="MotherDOB" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="MotherAge" class="form-control required" id="MotherAgeInput" placeholder="عمر الأم" readonly />
                                    <span asp-validation-for="MotherAge" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select asp-for="MotherJobId" class="form-control required">
                                        <option value="" disabled selected hidden>-- حدد وظيفة الأم *--</option>
                                        @foreach (var item in ViewBag.Jobs)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select asp-for="MotherReligionId" class="form-control required">
                                        <option value="" disabled selected hidden>-- حدد ديانة الأم *--</option>
                                        @foreach (var item in ViewBag.Religions)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select asp-for="MotherNationalityId" class="form-control required">
                                        <option value="" disabled selected hidden>-- حدد جنسية الأم *--</option>
                                        @foreach (var item in ViewBag.Nationalities)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="MotherMobile" class="form-control required" placeholder="رقم هاتف الأم" />
                                    <span asp-validation-for="MotherMobile" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </section>
                    <!-- Step 4 -->
                    <h6>Step 4</h6>
                    <section>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="Relative" type="checkbox" />
                                    <label style="font-size: 22px">هل هنالك صلة قرابة بين الأم والأب؟</label>
                                </div>
                            </div><hr />
                            <h3>عدد المواليد السابقة للأم عدا هذا الطفل؟</h3>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="Alive" class="form-control required" placeholder="الأحياء" />
                                    <span asp-validation-for="Alive" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="BornAliveThenDied" class="form-control required" placeholder="المولودين أحياء ثم توفوا" />
                                    <span asp-validation-for="BornAliveThenDied" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="StillBirth" class="form-control" placeholder="الذين و لدوا أمواتاً" />
                                    <span asp-validation-for="StillBirth" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="BornDisable" class="form-control required" placeholder="الذين ولدوا معوقين" />
                                    <span asp-validation-for="BornDisable" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="NoAbortion" class="form-control required" placeholder="عدد الأسقاطات إن وجدت" />
                                    <span asp-validation-for="NoAbortion" class="text-danger"></span>
                                </div>
                            </div>
                        </div><hr />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="IsDisabled" type="checkbox" />
                                    <label>هل الولادة الحالية معوقة؟</label>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <select asp-for="DisabledTypeId" class="form-control required">
                                        <option value="" disabled selected hidden>-- حدد نوع الإعاقة *--</option>
                                        @foreach (var item in ViewBag.Disables)
                                        {
                                            <option value="@item.Value">@item.Text</option>
                                        }
                                    </select>
                                </div>
                            </div>
                        </div><hr />
                        <div class="row">
                            <div class="col-md-3">
                                <div class="form-group">
                                    <input asp-for="DurationOfPregnancy" class="form-control required" placeholder="مدة الحمل بالإسبوع" />
                                    <span asp-validation-for="DurationOfPregnancy" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <input asp-for="BabyWeight" class="form-control required" placeholder="وزن الطفل /غم" />
                                    <span asp-validation-for="BabyWeight" class="text-danger"></span>
                                </div>
                            </div>
                        </div><hr />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <select asp-for="PlaceOfBirth" class="form-control required" readonly asp-items="Html.GetEnumSelectList<CRVS.Core.Models.BirthCertificate.PlaceOfBirths>()">
                                        <option vlaue="-1" disabled selected hidden>--- حدد مكان الولادة ---</option>
                                        @if (ViewBag.IsOffice)
                                        {
                                            <option value="1" selected></option>
                                        }
                                        else
                                        {
                                            <option value="0" selected></option>
                                        }
                                    </select>
                                    <span asp-validation-for="NumberOfBirth" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6" id="BirthOccurredByContainer" style="display: none;">
                                <div class="form-group">
                                    <select asp-for="BirthOccurredBy" class="form-control required" asp-items="Html.GetEnumSelectList<CRVS.Core.Models.BirthCertificate.BirthOccurredBys>()">
                                        <option vlaue="-1" disabled selected hidden>--- حدثت الولادة بواسطة ---</option>
                                    </select>
                                    <span asp-validation-for="BirthOccurredBy" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row" id="additionalInputs" style="display: none">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="KabilaName" class="form-control required" placeholder="KabilaName" />
                                    <span asp-validation-for="KabilaName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="LicenseNo" class="form-control required" placeholder="LicenseNo" />
                                    <span asp-validation-for="LicenseNo" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="LicenseYear" class="form-control required" placeholder="LicenseYear" />
                                    <span asp-validation-for="LicenseYear" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <script>
                            $(document).ready(function () {
                                $("#PlaceOfBirth").change(function () {
                                    var selectedValue = $(this).val();
                                    if (selectedValue === "0") {
                                        $("#BirthOccurredByContainer").show();
                                        $("#additionalInputs").hide();
                                        $("#KabilaName").val("");
                                        $("#LicenseNo").val("");
                                        $("#LicenseYear").val("");
                                    } else {
                                        $("#additionalInputs").show();
                                        $("#BirthOccurredByContainer").hide();
                                        $("#BirthOccurredBy").val("");
                                    }
                                    $("#BirthOccurredBy").change(function () {
                                        if ($(this).val() === "") {
                                            $(this).prepend('<option value="-1" disabled selected hidden>--- حدثت الولادة بواسطة ---</option>');
                                        }
                                    });
                                });
                            });
                        </script>
                    </section>
                    <!-- Step 5 -->
                    <h6>Step 5</h6>
                    <section>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="FamilyGovernorate" class="form-control required" placeholder="FamilyGovernorate" />
                                    <span asp-validation-for="FamilyGovernorate" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="FamilyDistrict" class="form-control required" placeholder="FamilyDistrict" />
                                    <span asp-validation-for="FamilyDistrict" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="FamilyNahia" class="form-control required" placeholder="FamilyNahia" />
                                    <span asp-validation-for="FamilyNahia" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="FamilyMahala" class="form-control required" placeholder="FamilyMahala" />
                                    <span asp-validation-for="FamilyMahala" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="FamilyZigag" class="form-control required" placeholder="FamilyZigag" />
                                    <span asp-validation-for="FamilyZigag" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <input asp-for="FamilyHomeNo" class="form-control required" placeholder="FamilyHomeNo" />
                                    <span asp-validation-for="FamilyHomeNo" class="text-danger"></span>
                                </div>
                            </div>
                        </div><hr />
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <select asp-for="DocumentType" class="form-control required" asp-items="Html.GetEnumSelectList<CRVS.Core.Models.BirthCertificate.DocumentTypes>()">
                                        <option vlaue="-1" disabled selected hidden>--- Select National Id For---</option>
                                    </select>
                                    <span asp-validation-for="DocumentType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6" id="firstDocumentTypeOptionSub1" style="display: none">
                                <div class="form-group">
                                    <input asp-for="RecordNumber" class="form-control required" placeholder="RecordNumber" />
                                    <span asp-validation-for="RecordNumber" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="PageNumber" class="form-control required" placeholder="PageNumber" />
                                    <span asp-validation-for="PageNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6" id="firstDocumentTypeOptionSub2" style="display: none">
                                <div class="form-group">
                                    <input asp-for="CivilStatusDirectorate" class="form-control required" placeholder="CivilStatusDirectorate" />
                                    <span asp-validation-for="CivilStatusDirectorate" class="text-danger"></span>
                                </div>
                                <div class="form-group">
                                    <input asp-for="GovernorateCivilStatusDirectorate" class="form-control required" placeholder="GovernorateCivilStatusDirectorate" />
                                    <span asp-validation-for="GovernorateCivilStatusDirectorate" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row" id="secondDocumentTypeOption" style="display: none">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <select asp-for="NationalIdFor" class="form-control required" asp-items="Html.GetEnumSelectList<CRVS.Core.Models.BirthCertificate.NationalIdFors>()">
                                        <option vlaue="-1" disabled selected hidden>--- Select National Id For---</option>
                                    </select>
                                    <span asp-validation-for="NationalIdFor" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="NationalId" class="form-control required" placeholder="NationalId" />
                                    <span asp-validation-for="NationalId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row" id="thirdDocumentTypeOption" style="display: none">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <input asp-for="PassportNo" class="form-control required" placeholder="PassportNo" />
                                    <span asp-validation-for="PassportNo" class="text-danger"></span>
                                </div>
                            </div>
                        </div><hr />
                        <script>
                            $(document).ready(function () {
                                $("#DocumentType").change(function () {
                                    var selectedValue = $(this).val();
                                    if (selectedValue === "0") {
                                        $("#firstDocumentTypeOptionSub1").show();
                                        $("#firstDocumentTypeOptionSub2").show();
                                        $("#secondDocumentTypeOption").hide();
                                        $("#thirdDocumentTypeOption").hide();
                                        $("#NationalIdFor").val("");
                                        $("#NationalId").val("");
                                        $("#PassportNo").val("");
                                    } else if (selectedValue === "1") {
                                        $("#firstDocumentTypeOptionSub1").hide();
                                        $("#firstDocumentTypeOptionSub2").show();
                                        $("#secondDocumentTypeOption").show();
                                        $("#thirdDocumentTypeOption").hide();
                                        $("#RecordNumber").val("");
                                        $("#PageNumber").val("");
                                    } else {
                                        $("#firstDocumentTypeOptionSub1").hide();
                                        $("#firstDocumentTypeOptionSub2").hide();
                                        $("#secondDocumentTypeOption").hide();
                                        $("#thirdDocumentTypeOption").show();
