                                    <div class="form-group select2-parent">
                                        <select asp-for="MotherJobId" class="select2 required" asp-items="@ViewBag.FemaleJobs">
                                            <option value="" disabled selected hidden>-- @Localizer["MotherJob"] *--</option>
                                        </select>
                                        <label style="position: absolute; top: 4px; right: 41px; font-size: 13px; color: #9da6ab;">@Localizer["MotherJob"]</label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>

                    <!-- Step 3 -->
                    <h6>@Localizer["MotherInfo"]</h6>
