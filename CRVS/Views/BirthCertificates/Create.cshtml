<script>
    function calculateAge(dobInputId, ageInputId) {
        var dobInput = document.getElementById(dobInputId);
        var dob = new Date(dobInput.value);
        var now = new Date();
        var age = now.getFullYear() - dob.getFullYear();
        var monthDiff = now.getMonth() - dob.getMonth();

        if (monthDiff < 0 || (monthDiff === 0 && now.getDate() < dob.getDate())) {
            age--;
        } else if (monthDiff >= 6) {
            age++;
        }

        var ageInput = document.getElementById(ageInputId);
        ageInput.value = age + " سنة";
    }
</script>
