                                        <label>@Localizer["MotherFName"]</label>
                                        <span asp-validation-for="MotherFName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-floating">
                                        <input asp-for="MotherMName" class="form-control " placeholder="@Localizer["MotherMName"]" />
                                        <label>@Localizer["MotherMName"]</label>
                                        <span asp-validation-for="MotherMName" class="text-danger"></span>
                                    </div>
