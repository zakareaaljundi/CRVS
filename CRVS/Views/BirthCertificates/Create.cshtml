<script>
    // Function to convert the selected time to Arabic words
    function convertTimeToArabic(timeInput) {
        // Splitting the time into hours and minutes
        var timeParts = timeInput.split(":");
        var hours = parseInt(timeParts[0]);
        var minutes = parseInt(timeParts[1]);

        // Conversion logic to Arabic words (customize as per your needs)
        var timeText = "";
        if (hours > 12) {
            timeText += (hours - 12) + " مساءً";
        } else {
            timeText += hours + " صباحًا";
        }
        if (minutes > 0) {
            timeText += " و " + minutes + " دقيقة";
        }
        return timeText;
    }

    // Function to convert the selected date to Arabic words
    function convertDateToArabic(dateInput) {
        // Splitting the date into year, month, and day
        var dateParts = dateInput.split("-");
        var year = parseInt(dateParts[0]);
        var month = parseInt(dateParts[1]);
        var day = parseInt(dateParts[2]);

        // Conversion logic to Arabic words (customize as per your needs)
        var dateText = day + " " + getArabicMonthName(month) + " " + year;
        return dateText;
    }

    // Function to get the Arabic month name based on the month number
    function getArabicMonthName(month) {
        var arabicMonths = [
            "يناير",
            "فبراير",
            "مارس",
            "أبريل",
            "مايو",
            "يونيو",
            "يوليو",
            "أغسطس",
            "سبتمبر",
            "أكتوبر",
            "نوفمبر",
            "ديسمبر"
        ];
        return arabicMonths[month - 1];
    }

    // Event handler for when the time or date input changes
    var timeInput = document.querySelector('BH');
    var dateInput = document.querySelector('DOH');
    var dobTextOutput = document.querySelector('dobTextInput');

    timeInput.addEventListener('change', function () {
        var timeValue = this.value;
        var timeText = convertTimeToArabic(timeValue);
        dobTextOutput.value = timeText;
    });

    dateInput.addEventListener('change', function () {
        var dateValue = this.value;
        var dateText = convertDateToArabic(dateValue);
        dobTextOutput.value = dateText;
    });
</script>