                                <div class="col-md-4">
                                    <div class="form-group select2-parent">
                                        <select asp-for="MotherReligionId" class="select2 " asp-items="@ViewBag.FemaleReligions">
                                            <option value="" disabled selected hidden>-- @Localizer["MotherReligion"] *--</option>
                                        </select>
                                        <label style="position: absolute; top: 4px; right: 41px; font-size: 13px; color: #9da6ab;">@Localizer["MotherReligion"]</label>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group select2-parent">
                                        <select asp-for="MotherNationalityId" class="select2 " asp-items="@ViewBag.MotherNationalities">
                                            <option value="" disabled selected hidden>-- @Localizer["MotherNationality"] *--</option>
                                        </select>
                                        <label style="position: absolute; top: 4px; right: 41px; font-size: 13px; color: #9da6ab;">@Localizer["MotherNationality"]</label>
