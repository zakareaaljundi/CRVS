                        @{
                            if (ViewBag.FacilityType == "مكتب تسجيل الولادات والوفيات")
                            {
                                ViewBag.PlaceOfBirth = "مكتب";
                                ViewBag.IsOffice = true;
                            }
                            else
                            {
                                ViewBag.PlaceOfBirth = "مستشفى أو مركز";
                                ViewBag.IsOffice = false;
                            }
                            var isOffice = ViewBag.IsOffice;

                            var birthOccurredByOptions = Html.GetEnumSelectList<CRVS.Core.Models.BirthCertificate.BirthOccurredBys>().ToList();
                            if (!isOffice)
                            {
                                birthOccurredByOptions.RemoveAt(2);
                                birthOccurredByOptions.RemoveAt(2);
