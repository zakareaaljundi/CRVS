                                <div class="col-md-4">
                                    <div class="form-floating">
                                        <input asp-for="MotherLName" class="form-control " placeholder="@Localizer["MotherLName"]" />
                                        <label>@Localizer["MotherLName"]</label>
                                        <span asp-validation-for="MotherLName" class="text-danger"></span>
